{
  "name": "WISE",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/arkime/arkime.git"
  },
  "scripts": {
    "bundle": "(cd vueapp && vite build --minify false)",
    "bundle:min": "(cd vueapp && vite build --minify esbuild)",
    "addtestuser": "cd ../ && npm run viewer:addtestuser",
    "run_bundle": "cd ../ && npm run wise:run_bundle",
    "predev": "cd ../ && npm run viewer:addtestuser",
    "dev": "concurrently 'npm run dev_front' 'npm run dev_back'",
    "dev_front": "cd vueapp && vite",
    "dev_back": "NODE_ENV=development nodemon wiseService.js -c ../tests/config.test.json --webconfig",
    "dev_back_debug": "NODE_ENV=development nodemon wiseService.js -c ../tests/config.test.json --webconfig --debug --debug",
    "doc": "cd ../ && npm run wise:doc",
    "lint": "cd ../ && npm run wise:lint",
    "lint-fix": "cd ../ && npm run wise:lint-fix"
  },
  "engines": {
    "node": ">= 20.9.0 < 23",
    "npm": ">= 3.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "vueapp"
    ],
    "watch": [
      ".",
      "../common"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
