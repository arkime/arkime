{
  "name": "arkime",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/arkime/arkime.git"
  },
  "devDependencies": {
    "d3": "^7.7.0",
    "jquery": "^3.6.0",
    "save-svg-as-png": "^1.4.17"
  },
  "scripts": {
    "bundle": "(cd vueapp && vite build --minify false)",
    "bundle:min": "(cd vueapp && vite build --minify esbuild)",
    "addtestuser": "cd ../ && npm run viewer:addtestuser",
    "run_bundle": "cd ../ && npm run viewer:run_bundle",
    "predev": "cd ../ && npm run viewer:addtestuser",
    "dev": "concurrently 'npm run dev_front' 'npm run dev_back'",
    "dev_front": "cd vueapp && vite",
    "dev_back": "NODE_ENV=development nodemon viewer.js -c ../tests/config.test.ini -n testuser",
    "doc": "cd ../ && npm run viewer:doc",
    "lint": "cd ../ && npm run viewer:lint",
    "lint-fix": "cd ../ && npm run viewer:lint-fix"
  },
  "engines": {
    "node": ">= 20.9.0 < 23",
    "npm": ">= 3.0.0"
  },
  "nodemonConfig": {
    "ext": "js,json,jade,pug,styl",
    "ignore": [
      "node_modules",
      "vueapp"
    ],
    "watch": [
      ".",
      "./views/",
      "../common/",
      "../tests/config.test.ini",
      "../capture/parsers/"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
