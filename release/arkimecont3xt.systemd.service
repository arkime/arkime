[Unit]
Description=Arkime Cont3xt
After=network.target

[Service]
Type=simple
Restart=on-failure
StandardOutput=tty
EnvironmentFile=-BUILD_ARKIME_INSTALL_DIR/etc/cont3xt.env
# Modify BUILD_ARKIME_INSTALL_DIR/etc/cont3xt.env instead of ExecStart
ExecStart=BUILD_ARKIME_INSTALL_DIR/bin/node cont3xt.js -c BUILD_ARKIME_INSTALL_DIR/etc/cont3xt.ini ${OPTIONS}
WorkingDirectory=BUILD_ARKIME_INSTALL_DIR/cont3xt
# Logging
SyslogIdentifier=arkimecont3xt
# Command these two lines if you want to use systemd journal
StandardOutput=append:BUILD_ARKIME_INSTALL_DIR/logs/cont3xt.log
StandardError=append:BUILD_ARKIME_INSTALL_DIR/logs/cont3xt.log

[Install]
WantedBy=multi-user.target
