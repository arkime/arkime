INCLUDE_KAFKA  = @KAFKA_CFLAGS@
LIB_KAFKA = @KAFKA_LIBS@
INCLUDE_OTHER = -I../.. -I../../thirdparty \
                @GLIB2_CFLAGS@

install_sh = @install_sh@
mkdir_p = @mkdir_p@
INSTALL = @INSTALL@
PLUGINDIR = @prefix@/plugins

SRCS=$(wildcard *.c)
SOS=$(patsubst %.c,../%.so,$(SRCS))

../%.so : %.c ../../arkime.h ../../hash.h ../../dll.h
	$(CC) -pthread @SHARED_FLAGS@ -o $@ @CFLAGS@ -Wall -Wextra -D_GNU_SOURCE -fPIC $(INCLUDE_OTHER) $(INCLUDE_KAFKA) $< $(LIB_KAFKA)

all:$(SOS)

distclean realclean clean:
	rm -f *.o *.so
